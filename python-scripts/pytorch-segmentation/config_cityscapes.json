{
    "name": "sky-segmentation",
    "n_gpu": 1,
    "use_synch_bn": false,

    "arch": {
        "type": "DeepLab",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": true
        }
    },

    "train_loader": {
        "type": "CityScapes",
        "args":{
            "data_dir": "/data/segmentation/autonomous-driving/cityscapes/",
            "batch_size": 8,
            "base_size": 224,
            "crop_size": 200,
            "augment": true,
            "shuffle": false,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train",
            "val_split": 0.0,
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "CityScapes",
        "args":{
            "data_dir": "/data/segmentation/autonomous-driving/cityscapes/",
            "batch_size": 8,
            "crop_size": 200,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "Adam",
        "differential_lr": true,
        "args":{
            "lr": 0.001
        }
    },

    "loss": "LovaszSoftmax",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 1,
        "save_dir": "saved/",
        "save_period": 10,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 1
    }
}
